@{
    ViewData["Title"] = "Disable Two Factor Authentication";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //TODO implement the ability to disable 2FA from UI here (users with administrator role should also be able to forcefully disable 2FA in case of device loss)
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first" style="padding-top: 25px;">
            <h3>Disable Two Factor Authentication</h3>
        </div>
        <form method="post">
            <asp:Label runat="server" style="color: red"> @ViewBag.lblAuthError</asp:Label>
            <input type="text" name="inputCode" placeholder="Input Security Code" autofocus /><br />
            <input type="submit" class="fadeIn fourth" value="Submit" style="margin-top: 20px;" />
        </form>

        <input type="button" value="Back to User Settings" class="fadeIn fifth" style="text-align: center; top: 80%" onclick="location.href='@Url.Action("Index", "UserSettings")'" />
    </div>
</div>
