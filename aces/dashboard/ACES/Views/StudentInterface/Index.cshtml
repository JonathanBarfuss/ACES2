@model IEnumerable<ACES.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    <a asp-action="StudentAssignments" asp-route-courseId="@item.Id">Assignments</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-route-courseId="@ViewBag.Id">Add Course</a>
@if (ViewBag.IsMessage == "true")
{
    <div class="alert alert-primary alert-dismissible hide" id="statusBox">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Alert:</h4>
        <p>@ViewBag.Message</p>
    </div>
}
